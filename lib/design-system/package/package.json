{
  "name": "@orchest/design-system",
  "version": "0.0.6",
  "author": "Orchest B.V.",
  "license": "AGPL-3.0-only",
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "typings": "dist/index.d.ts"
  },
  "sideEffects": false,
  "scripts": {
    "build": "concurrently -n w: npm:*:build",
    "cjs:build": "esbuild src/index.ts --bundle --external:react --external:react-dom --outfile=dist/index.cjs --format=cjs",
    "cjs:watch": "esbuild src/index.ts --bundle --external:react --external:react-dom --outfile=dist/index.cjs --format=cjs --watch --log-level=error",
    "esm:build": "esbuild src/index.ts --bundle --external:react --external:react-dom --outfile=dist/index.js --format=esm",
    "postbuild": "ts-node -r tsconfig-paths/register src/scripts/post-build.ts",
    "prepublishOnly": "pnpm run build && pnpm run postbuild",
    "ts:build": "tsc --emitDeclarationOnly --outDir dist",
    "ts:check": "tsc -p tsconfig.json --noEmit"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "0.0.17",
    "@radix-ui/react-id": "0.0.6",
    "@radix-ui/react-polymorphic": "0.0.11",
    "@stitches/react": "0.2.0",
    "stitches-mixins": "0.2.1"
  },
  "devDependencies": {
    "@stitches/core": "0.2.0",
    "@types/node": "15.0.1",
    "@types/react": "17.0.3",
    "concurrently": "6.0.2",
    "esbuild": "0.8.44",
    "fs-extra": "10.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.2"
  }
}
